[program:{{app_name}}]
environment={% for k, v in app_env_vars.iteritems() %}{% if not loop.first %},{% endif %}{{ k }}="{{ v }}"{% endfor %}{% if newrelic %},NEW_RELIC_CONFIG_FILE="{{newrelic_ini_path}}"{% endif %}{% if debug%},DEBUG=1{% endif %}

command={{app_env_dir}}/bin/gunicorn {{app_name}}.wsgi:application -w {{gunicorn_workers}} --log-file {{app_log_dir}}/gunicorn.log
directory={{app_code_dir}}
user={{app_user}}
autostart=true
autorestart=true
redirect_stderr=True
stdout_logfile={{app_log_dir}}/supervisor.log
