upstream app_server_djangoapp {
  server localhost:8000 fail_timeout=0;
}

# Redirect from port 80
server {
    listen   {{nginx_http_port}};
    server_name {{redirect_domain}};
    rewrite ^(.*) https://{{domain_name}}$1 permanent;
}

server {
    listen   {{nginx_http_port}};
    server_name {{domain_name}} www.{{domain_name}};
    rewrite ^(.*) https://{{domain_name}}$1 permanent;
}

server {
  listen {{nginx_https_port}};
  server_name {{domain_name}};

  ssl on;
  ssl_certificate /etc/nginx/ssl/{{domain_name}}.crt;
  ssl_certificate_key /etc/nginx/ssl/{{domain_name}}.key;
  # enables TLSv1/1.1/1.2
  # not SSLv2 which is weak and should no longer be used.
  # and not SSLv3 because POODLE
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  #Disables all weak ciphers
  #ssl_ciphers ALL:!aNULL:!ADH:!eNULL:!LOW:!EXP:RC4+RSA:+HIGH:+MEDIUM;
  ssl_ciphers HIGH:!aNULL:!MD5;
  ssl_prefer_server_ciphers on;

  access_log {{app_log_dir}}/nginx.access.log;
  error_log {{app_log_dir}}/nginx.error.log info;

  keepalive_timeout 70;

  # nginx should serve up static files and never send to the WSGI server
  location /static {
    alias {{app_static_dir}};
  }
  location /media {
    alias {{app_media_dir}};
  }

  location / {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-Proto https;
    proxy_redirect off;
    proxy_buffers 8 16k;
    proxy_buffer_size 32k;
    proxy_read_timeout 180s;
    proxy_pass http://app_server_djangoapp;
  }
}
